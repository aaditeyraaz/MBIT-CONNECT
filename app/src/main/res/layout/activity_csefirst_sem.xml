<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context="Connect.CsefirstSem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="CSE 1st Semester"
            android:textColor="#FFE600"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="New Syllabus"
            android:textSize="20sp"
            android:textColor="#FDFCFC"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_2"
            android:text="CHEMISTRY"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


        <TextView
            android:id="@+id/csefirst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:text="@string/cse_first"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingLeft="20dp"
            android:justificationMode="inter_word"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chem" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/math1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_2"
            android:text="MATHEMATICS -I"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csefirst" />

        <TextView
            android:id="@+id/csefirst1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cse_first"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:justificationMode="inter_word"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/math1" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_2"
            android:text="PROGRAMMING FOR PROBLEM"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csefirst1" />


        <TextView
            android:id="@+id/csefirst2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cse_first"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:justificationMode="inter_word"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pps" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/workshop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_2"
            android:text="WORKSHOP MENUFACTURING"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csefirst2" />


        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/csefirst3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cse_first"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:justificationMode="inter_word"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workshop" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/engilish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_2"
            android:text="ENGLISH"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csefirst3"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/csefirst4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cse_first"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:justificationMode="inter_word"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/engilish" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>